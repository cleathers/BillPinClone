<% if user_signed_in? %>
  <div id='app'></div>
  <div id='loader' class='center'>
    <i class='glyphicon glyphicon-cog spinner icon-lg'></i>
    <div class='row'>Initializing...</div>
  </div>
  <script type='text/javascript' charset='utf-8'>
    $(BillPinClone.initialize({current_user_id: <%= current_user.id %>}));
  </script>
<% else %>
  <div class='row'>
    <h1 class='parallax-h1'>Welcome to BillPinClone!</h1>
  </div>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4 bordered padded'>
      <div class='row padded'>
        <ul id='log-in-options' class='nav nav-tabs'>
          <li class='active'><a id='log-in-tab'>Log In</a></li>
          <li><a id='sign-up-tab'>Sign Up</a></li>
          <li><a id='guest-user-tab'>Guest Log In</a></li>
        </ul>
      </div>

      <div id='log-in'>
        <div class='col-md-12'>
          <form action='<%= user_session_url %>' method='POST'
                 class='form-horizontal' role='Log In'>
            <%= render partial: 'layouts/auth_helper' %>
            <div class='form-group'>
              <label>
                Email
                <input type='email' class='form-control'
                       name='user[email]'>
              </label>
            </div>
            
            <div class='form-group'>
              <label>
                Password
                <input type='password' class='form-control'
                       name='user[password]'>
              </label>
            </div>
            <button class='btn btn-brown' role='form-submission'>Log In</button>
          </form>
        </div>
      </div>

      <div id='sign-up' class='hidden'>
        <div class='col-md-12'>
          <form action='<%= user_registration_url %>' method='POST'
                 class='form-horizontal' role='Sign Up'>
            <%= render partial: 'layouts/auth_helper' %>
            <div class='form-group'>
              <label>
                Email
                <input type='email' class='form-control'
                       name='user[email]'>
              </label>
            </div>
            
            <div class='form-group'>
              <label>
                Password
                <input type='password' class='form-control'
                       name='user[password]'>
              </label>
            </div>

            <div class='form-group'>
              <label>
                Password Confirmation
                <input type='password' class='form-control'
                       name='user[password_confirmation]'>
              </label>
            </div>

            <button class='btn btn-brown' role='form-submission'>Log In</button>

          </form>
        </div>
      </div>
      <div id='guest-user' class='row hidden'>
        <div class='col-md-12'>
          <h2>Log In as a Guest</h2>
          <p>Feel free to browse around as a guest. You can interact with other guest users and experience the full awesomeness of BillPinClone without having to give us any of your information. Hurray!</p>
          <%= render partial: 'layouts/guest_user' %>
        </div>
      </div>
    </div> 
  </div>
<% end %>

