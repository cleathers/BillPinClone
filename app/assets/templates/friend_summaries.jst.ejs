<% if (!(_.isEmpty(positives))) { %>
  <table class="table table-striped table-history">
    <tr>
      <th class='positive'>FRIENDS OWE ME</th>
      <th class='positive display-amt'>$<%= posSum %>.00</th>
    </tr>
    <% _.each(positives, function(amt, user_id) { %>
      <tr data-user-id='<%= user_id %>'>
        <td><%= users.get(user_id).escape('email')  %></td>
        <td class='display-amt'>$ <%= parseFloat(amt).toFixed(2) %></td>
      </tr>
    <% }); %>
  </table>
<% } %>

<% if (!(_.isEmpty(negatives))) { %>
  <table class="table table-striped table-history">
    <tr>
      <th class='negative'>I OWE FRIENDS</th>
      <th class='negative display-amt'>$<%= negSum %>.00</th>
    </tr>
  <% _.each(negatives, function(amt, user_id) { %>
      <tr data-user-id='<%= user_id %>'>
        <td><%= users.get(user_id).escape('email')  %></td>
        <td class='display-amt'>$ <%= parseFloat(amt).toFixed(2) %></td>
      </tr>
    <% }); %>
  </table>
<% } %>

<% if (_.isEmpty(negatives) && _.isEmpty(positives)) { %>
  <div class='col-md-12 empty-page'>
    <h3>Welcome to BillPinClone</h3>
    <p>This is a clone of Bill Pin.</p>
    <p>The application allows you to keep track of bills paid by you or a friend and calculates the net difference between the two of you.</p>
    <p>You can split a bill with multiple users and keep pictues of the receipts.</p>
  </div>
<% } %>
