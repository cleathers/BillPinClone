<div class="jumbotron col-xs-8 col-xs-offset-2">
  <% if (users) { %>
    <% _.each(users, function(user) { %>
      <div class='row user-row'>
        <div class='col-xs-9'>
          <% if (user['userId']) { %>
            <p><%= BillPinClone.friends.get(user['userId']).escape('email') %></p>
          <% } else if (user['user_id']) { %>
            <p><%= BillPinClone.friends.get(user['user_id']).escape('email') %></p>
          <% } %>
        </div>
        <div class='col-xs-3'>
          <p>$ <%= parseFloat(user['amt']).toFixed(2) %></p>
        </div>
      </div>
    <% }); %>
  <% } %>
  <div class='row user-row'>
    <% if (split) { %>
      <div class='col-xs-6'>
        <h3><%= split['des'] %></h3>
        <p><%= split['date'] %></p>
      </div>
      <div class='col-xs-6'>
        <p><%= BillPinClone.friends.get(split['payer_id']).get('email') %> paid </p>
        <h3 class='pull-right'>$ <%= parseFloat(split['total_amt']).toFixed(2) %></h3>
      </div>
      <% if (split.receipt_photo) { %>
        <img src='<%= split.receipt_photo %>' >
      <% }  %>
    <% } %>
  </div>
</div>
