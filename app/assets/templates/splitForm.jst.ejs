<form class='form-inline'>
  <div class='form-group'>
      <label class='sr-only'> Who Paid?</label>
      <input value='Me' name='split[split_type]'
             type='text' class='form-control' placeholder='Who Paid?'>
  </div>  

  <% if (users) { %>
    <div class='form-group'>
      <select name='split[friends][0]' class='form-control'>
        <% users.each(function (user) { %>
          <option value='<%= user.get('id') %>'><%= user.get('email') %></option>
        <% }); %>
      </select>
    </div>
  <% } %>

  <div class='form-group'>
      <label class='sr-only'>How Much?</label>
      <input name='split[amt]'  id='split-amt'
             type='text' class='form-control' placeholder='How Much?'>
  </div>  

  <div class='form-group'>
      <label class='sr-only'>Description</label>
      <input name='split[des]' id='split-des'
             type='text' class='form-control' placeholder='Description'>
  </div>

  <button type='submit' class='btn btn-orange'>Pin it</button>
</form>
<p id='split-amt-prev'></p>
<p id='split-des-prev'></p>
