<% if (!(_.isEmpty(splits))) { %>
  <table class=" table table-striped table-history">
    <tr>
      <th>Email</th>
      <th>Amount</th>
      <th>For</th>
      <th>On</th>
    </tr>
    <% _.each(splits, function (split) { %>
      <tr>
        <% if (split.get('user_id') == BillPinClone.current_user.id) { %>
          <td><%= BillPinClone.friends.get(split.get('friend_id')).get('email') %></td>
        <% } else { %>
          <td><%= BillPinClone.friends.get(split.get('user_id')).get('email') %></td>
        <% } %>
        <td class="<%= split.get('split_type') %>"><%= split.get('amt') %></td>
        <td><%= histories.get(split.get('split_id')).escape('des') %></td>
        <td><%= split.get('created_at') %></td>
        
      </tr>
    <% }); %>

  </table>
<% } else { %>
  <p>You ain't got no transactions</p>
<% } %>
